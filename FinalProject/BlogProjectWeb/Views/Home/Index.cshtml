@model List<BlogProjectWeb.Models.Domain.BlogPost>
@{

}

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-item-centers g-5 py-5">
        <div class="row align-items-center g-5 py-5">
            <h1 class="display-5 fw-bold lh-1" mb-3>
                Blog - Vildan's BLOG
            </h1>
            <p class="lead">
                Hello, I'm Vildan. I write blogs on different topics here. You can also blog about any topic you want.
            </p>
        </div>
        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/4240505/pexels-photo-4240505.jpeg?auto=compress&cs=tinysrgb&w=600"
                 alt="Blog- Vildan's Blogs"
                 class="d-block mx-lg-auto img-fluid" width="800" />
        </div>
    </div>
</div>

<div class="container">
    <div class="col-6">
        @if (Model != null && Model.Any())
        {
            @foreach (var blogPost in Model)
            {
                <div class="mb-5 bg-light box-shadow">
                    
                    <h2 class="mb-2">@blogPost.Heading</h2>
                    <p class="mb-2">
                        Author: @blogPost.Author <br />
                        Published Date: @blogPost.PublishedDate.ToShortTimeString() <br />
                        Content: @blogPost.Content
                    </p>
                </div>
            }
        }
    </div>
</div>
